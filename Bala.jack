            let x = x - 1;
            let y = y + 1;
            do Screen.setColor(true);
            do Screen.drawRectangle(x, y, x + tamano, y + tamano);
            do velocidad();
        }
        return;
    }

    method void moverArriba() {
        if (y > 0) {
            do Screen.setColor(false);
