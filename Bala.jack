            do Screen.drawRectangle(x, y, x + tamano, y + tamano);
            do velocidad();
        }
        return;
    }

    method void moverIzquierda() {
        if (x > 0) {
            do Screen.setColor(false);
            do Screen.drawRectangle(x, y, x + tamano, y + tamano);
            let x = x - 1;
            do Screen.setColor(true);
            do Screen.drawRectangle(x, y, x + tamano, y + tamano);
            do velocidad();
        }
        return;
    }

    method void moverDerecha() {
        if ((x + tamano) < 510) {
            do Screen.setColor(false);
            do Screen.drawRectangle(x, y, x + tamano, y + tamano);
            let x = x + 1;
            do Screen.setColor(true);
            do Screen.drawRectangle(x, y, x + tamano, y + tamano);
            do velocidad();
        }
        return;
    }

